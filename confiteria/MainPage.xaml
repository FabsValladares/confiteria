<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="confiteria.MainPage">

    <ListView x:Name="confiteriaListView"
              HasUnevenRows="True"
              ItemsSource="{Binding ConfiteriaList}">
        <ListView.ItemTemplate>
            <DataTemplate>
                <ViewCell>
                    <StackLayout Padding="10">
                        <Image Source="{Binding ImagenProducto}" HeightRequest="100" WidthRequest="100"/>
                        <Label Text="{Binding NombreProducto}" FontAttributes="Bold" />
                        <Label Text="{Binding Descripcion}" />
                        <Label Text="{Binding Precio, StringFormat='Precio: L.{0:N2}'}" FontAttributes="Bold" />
                    </StackLayout>
                </ViewCell>
            </DataTemplate>
        </ListView.ItemTemplate>
    </ListView>

</ContentPage>

